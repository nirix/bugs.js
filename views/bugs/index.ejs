<div class="content">
	<h2>Bugs</h2>
	<table class="table table-striped">
		<thead>
			<th>ID</th>
			<th>Summary</th>
			<th>Status</th>
			<th>Reported by</th>
			<th>Reported on</th>
		</thead>
		<tbody>
		<% bugs.forEach(function(bug){ %>
			<tr>
				<td><%= bug.id %></td>
				<td><a href="<%= bug.href() %>"><%= bug.summary %></a></td>
				<td><%= bug.status %></td>
				<td><%= bug.user.username %></td>
				<td><%= formatDateTime(bug.createdAt) %></td>
			</tr>
		<% }); %>
		</tbody>
	</table>
</div>